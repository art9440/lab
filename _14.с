#include <stdio.h>
#include <stdlib.h>
#include <malloc.h>

void fill(int **arr, int len){
    int num = 1, level;

    for (level = 0; level < len / 2; level++){
        int i;

        for (i = level; i < len - level; i++)
            arr[level][i] = num++;

        for (i = level + 1; i < len - level; i++)
            arr[i][len - level - 1] = num++;

        for (i = len - level - 2; i >= level; i--)
            arr[len - level - 1][i] = num++;

        for (i = len - level - 2; i > level; i--)
            arr[i][level] = num++;
    }
    if (len % 2 == 1)
        arr[len / 2][len / 2] = num;
}


int main() {
    int n, **arr;
    scanf("%d", &n);
    arr = (int **) malloc(n * sizeof(int *));
    for (int i = 0; i < n; i++)
        arr[i] = (int *) malloc(n * sizeof(int *));

    fill(arr, n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            printf("%d\t", arr[i][j]);
        puts("\n");

    }

    free(arr);
    return 0;
}
